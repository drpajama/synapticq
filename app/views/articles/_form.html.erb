<%= form_for @article do |f| %>
	<% if @article.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@article.errors.count, "Error") %> : 이 문제를 저장할 수 없습니다. </h2>
		<ul>
		<% @article.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>
	<p>
		<%= f.label :과목 %><br>
		<%= f.text_field :title %>
	</p>
	</p>
		<%= f.label :내용 %><br>
		<%= f.text_area :text %>
	</p>
	</p>
		<%= f.label :연관토픽 %><br>
		<%= f.text_area :topic %>
	</p>
	</p>
		<%= f.label :해설 %><br>
		<%= f.text_area :explanation %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>